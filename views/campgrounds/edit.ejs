<% layout('layout/boilerplate')%>
<link rel="stylesheet" href="/stylesheets/images.css" class="rel"> 
<div class="row">
    <h1 class="text-center">EDIT Campground</h1>
    <div class="col-md-6 offset-md-3">
        <form action="/campgrounds/<%=foundCampground.id%>?_method=PATCH" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label"><b>Title : </b></label>
                <input class="form-control" type="text" name="campground[title]" id="title" placeholder="CAMPGROUND TITLE" value="<%=foundCampground.title %>" required>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>
            <div class ="mb-3">
                <label for="location" class="form-label"><b>Location : </b></label>
                <input class="form-control" type="text" name="campground[location]" id="location" placeholder="CAMPGROUND LOCATION" value="<%=foundCampground.location %>" required>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>
            <div class="mb-3">
                <label for="price" class="form-label"><b>Price : </b></label>
                <div class="input-group">
                    <span class="input-group-text" id="price-label">$</span>
                    <input type="text" class="form-control" id="price" placeholder="0.00" name="campground[price]" aria-describedby="price-label" value="<%=foundCampground.price %>" required>
                    <div class="valid-feedback">
                        Looks Good!
                    </div>
                </div>
            </div>
            <div class = "mb-3">
                <label for="description" class="form-label"><b>Description : </b></label>
                <textarea name="campground[description]" id="description" placeholder="CAMPGROUND DESCRIPTION" class="form-control" required><%=foundCampground.description %></textarea>
                <div class="valid-feedback">
                    Looks Good!
                </div>
            </div>
            <div class="mb-3">
                <label class="form-label"><b>Add More Image(s) : </b></label>
                <div class="form-file custom-file">
                      <input class="form-control custom-file-input" type="file" id="image" name="image" multiple onchange="previewMultiple(event)">
                      <label for="image" class="form-label custom-file-label"></label>
                  </div>
                  <div id="formFile"></div>
            </div>
            <div class="mb-3">
                <% foundCampground.images.forEach(function(img ,i) {%> 
                    <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="">
                    <div class="form-check-inline">
                        <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                    </div>
                    <label for="image-<%=i%> ">Delete?</label>
                <% }) %> 
            </div>
            <div class="mb-3 d-inline">
                <button class="btn btn-info">UPDATE!</button>
            </div>
            <div class="mb-3 d-inline">
                <a href="/campgrounds/<%=foundCampground.id %>" class="btn btn-success">BACK TO CAMPGROUND!</a>
            </div>
        </form>      
    </div>
</div>


